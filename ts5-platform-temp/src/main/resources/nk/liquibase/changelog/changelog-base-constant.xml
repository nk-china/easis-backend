<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <!--
        DEF_CONSTANT        系统配置常量表
    -->

    <changeSet id="DEF_CONSTANT-01" author="bean">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="DEF_CONSTANT" />
            </not>
        </preConditions>
        <createTable tableName="DEF_CONSTANT" remarks="常量表">
            <column name="CONSTANT_KEY"      type="${type.uuid}"     remarks="KEY">
                <constraints primaryKey="true" />
            </column>
            <column name="CONSTANT_VALUE"    type="${type.clob}"     remarks="VALUE"/>
        </createTable>
    </changeSet>

</databaseChangeLog>